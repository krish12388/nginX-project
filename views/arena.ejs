<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/header.ejs') %>

    <style>
      #chessboard {
        width: 240px;
        height: 240px;
        background-color: #f0d9b5;
        display: grid;
        grid-template-columns: repeat(8, 30px);
        grid-template-rows: repeat(8, 30px);
        border: 2px solid black;
        margin: 0 auto;
      }
      .square {
        width: 30px;
        height: 30px;
        display: flex;
        border: 2px solid black;
        align-items: center;
        justify-content: center;
        font-size: 24px;
      }
      .white {
        background: #f0d9b5;
      }
      .black {
        background: #844c1e;
      }
    </style>
    <title>Arena</title>
  </head>
  <body>
    <%- include ('../partials/nav.ejs') %>
    <div
      class="w-full min-h-screen flex flex-col items-center  bg-linear-to-b from-slate-800 to-slate-950 p-2"
    >
      <div
        class="grow md:h-1/10 h-1/2 w-full flex flex-col md:justify-center justify-center items-center md:gap-4 mt-4 md:m-0 p-0"
      >
        <div
          class="flex md:h-1/5 h-1/4 w-full md:w-full flex-col md:flex-row md:justify-between items-center gap-4 mt-4 md:m-0 p-4"
        >
          <!-- card 1 -->
          <div class="flex flex-col items-center justify-center">
            <div
              class="bg-slate-700/50 p-4 rounded-xl border border-slate-600 shadow-lg text-center backdrop-blur-sm hover:bg-slate-700/70 transition duration-300"
            >
              <h2 class="text-xl font-bold text-white">Room ID:</h2>
            </div>
          </div>
          <!-- card 2 -->
          <div class="flex flex-col items-center justify-center">
            <div
              class="bg-slate-700/50 p-4 rounded-xl border border-slate-600 shadow-lg text-center backdrop-blur-sm hover:bg-slate-700/70 transition duration-300"
            >
              <h3 class="text-xl font-bold text-white">Room Code:</h3>
            </div>
          </div>
        </div>
        <div
          class="md:m-0 md:p-0 m-2 md:h-1/4 md:w-1/4 h-1/2 w-1/2"
          id="chessboard"
        ></div>
      </div>
    </div>

    <script type="importmap">
      {
        "imports": {
          "chess.js": "https://cdn.jsdelivr.net/npm/chess.js@1.0.0-beta.8/+esm"
        }
      }
    </script>
    <script type="module" src="/js/arena.js"></script>
    <%- include ('../partials/footer.ejs') %>
  </body>
</html>
