<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/header.ejs') %>
  </head>
  <body>
    <div
      class="w-full min-h-screen flex flex-col bg-linear-to-b from-slate-800 to-slate-950 p-3.5"
    >
      <%- include ('../partials/nav.ejs') %>

      <div
        class="grow flex flex-col md:flex-row justify-center items-center gap-8 mt-4 md:mt-0 p-4"
      >
        <!-- Board Visual -->
        <div class="flex justify-center items-center">
          <img
            src="https://assets-configurator.chess.com/image/configurator/chessboard_1768166350728.gif"
            alt="Chess Board"
            class="h-[300px] w-[300px] md:h-[450px] md:w-[450px] shadow-2xl rounded-sm"
          />
        </div>

        <!-- Dashboard Section -->
        <div class="flex flex-col gap-6 w-full max-w-2xl">
          <!-- Stats Cards -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div
              class="bg-slate-700/50 p-4 rounded-xl border border-slate-600 shadow-lg text-center backdrop-blur-sm hover:bg-slate-700/70 transition duration-300"
            >
              <h3 class="text-amber-50 font-serif text-lg">Total Matches</h3>
              <p class="text-3xl font-bold text-amber-300 mt-2">0</p>
            </div>
            <div
              class="bg-slate-700/50 p-4 rounded-xl border border-slate-600 shadow-lg text-center backdrop-blur-sm hover:bg-slate-700/70 transition duration-300"
            >
              <h3 class="text-amber-50 font-serif text-lg">Wins</h3>
              <p class="text-3xl font-bold text-green-400 mt-2">0</p>
            </div>
            <div
              class="bg-slate-700/50 p-4 rounded-xl border border-slate-600 shadow-lg text-center backdrop-blur-sm hover:bg-slate-700/70 transition duration-300"
            >
              <h3 class="text-amber-50 font-serif text-lg">Losses</h3>
              <p class="text-3xl font-bold text-red-400 mt-2">0</p>
            </div>
          </div>

          <!-- Action Cards -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div
              class="bg-slate-600 p-6 rounded-xl shadow-xl flex flex-col items-center justify-center gap-4 hover:scale-105 transition duration-300 cursor-pointer border-2 border-transparent hover:border-amber-300 group"
            >
              <a href="/arena">
                <div
                  class="text-amber-300 group-hover:text-white transition-colors duration-300"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="48"
                    height="48"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M21 12V7H5a2 2 0 0 1 0-4h14v4" />
                    <path d="M3 5v14a2 2 0 0 0 2 2h16v-5" />
                    <path d="M18 12a2 2 0 0 0 0 4h4v-4Z" />
                  </svg>
                </div>
                <h2 class="text-2xl font-bold text-white font-serif">
                  Play Online
                </h2>
                <p class="text-slate-300 text-center">
                  Challenge players from around the world
                </p>
              </a>
            </div>

            <div
              class="bg-slate-600 p-6 rounded-xl shadow-xl flex flex-col items-center justify-center gap-4 hover:scale-105 transition duration-300 cursor-pointer border-2 border-transparent hover:border-amber-300 group"
            >
              <a href="/arena">
                <div
                  class="text-amber-300 group-hover:text-white transition-colors duration-300"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="48"
                    height="48"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M12 8V4H8" />
                    <rect width="16" height="12" x="4" y="8" rx="2" />
                    <path d="M2 14h2" />
                    <path d="M20 14h2" />
                    <path d="M15 13v2" />
                    <path d="M9 13v2" />
                  </svg>
                </div>
                <h2 class="text-2xl font-bold text-white font-serif">
                  Play with Bot
                </h2>
                <p class="text-slate-300 text-center">
                  Practice your skills against AI
                </p>
              </a>
            </div>
          </div>
        </div>
      </div>

      <%- include ('../partials/footer.ejs') %>
    </div>
  </body>
</html>
